class UsersController < ApplicationController
  def index
    @users = User.all
  end

  def edit
    @user = User.find_by(id: params[:id])
  end

  def update
    user = User.find_by(id: params[:id])
    user.name = params[:updatedName]
    user.email = params[:updatedEmail]
    user.sex = params[:updatedSex]
    user.birthdate = params[:updatedBirthdate]
    user.hometown = params[:updatedHometown]
    user.residence = params[:updatedResidence]
    user.job = params[:updatedJob]

    user.save
    redirect_to("/users/index")
  end
  
  
end
